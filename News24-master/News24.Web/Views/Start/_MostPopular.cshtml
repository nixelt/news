@using System.Globalization
@model List<News24.Web.ViewModels.StartViewModels.ArticleViewModel>
<div>
    <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Последние обновления</div>
</div>
@foreach (var item in Model)
{
    <div class="row pb-3">
        <div class="col-4 align-self-center" style="display: flex;justify-content: center">
            <a href="@Url.Action("Details", "Start",new{ id = item.ArticleId })">
                <img src="data:image/jpeg;base64, @Convert.ToBase64String(item.MainImage)" alt="@item.Head" class="fh5co_most_trading" />
            </a>
        </div>
        <div class="col-8 paddding">
            @Html.ActionLink(item.Head, "Details", "Start", new { id = item.ArticleId }, htmlAttributes: new { @class = "most_fh5co_treding_font ", @style = "text-decoration:none; color:black;" })
            <div class="most_fh5co_treding_font_123"> @item.PublicationDate.ToString("dddd, d MMMM yyyy г.", CultureInfo.GetCultureInfo("ru-ru"))</div>
        </div>
    </div>
}
